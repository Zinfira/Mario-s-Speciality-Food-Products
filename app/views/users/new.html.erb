<h1> Sign up </h1>
<%= form_for @user do |f| %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password%>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation%>
  <%= f.label "Checkbox for Admins" %>
  <%= f.check_box :admin%>
  <%= f.submit "Sign Up" %>
<% end %>